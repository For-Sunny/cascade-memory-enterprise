# ============================================
# CASCADE Enterprise RAM - Configuration
# CIPS Corp - https://cipscorps.io
# ============================================

# Path to persistent database storage (source of truth)
# Default: ~/.cascade-memory/data
CASCADE_DB_PATH=./data

# Path to RAM disk mount point (sub-millisecond reads)
# Windows: R:\cascade-memory\data
# Linux: /mnt/ramdisk/cascade/data
# macOS: /Volumes/RAMDisk/cascade/data
CASCADE_RAM_PATH=

# Debug mode - exposes stack traces in errors
# Default: false
# WARNING: Never enable in production
DEBUG=false

# Log level: debug, info, warn, error
# Default: info
LOG_LEVEL=info

# Log format: json (machine) or text (human)
# Default: json
LOG_FORMAT=json

# Audit log file path (JSONL format)
# Leave empty to disable file logging
# Audit events still logged to stderr
CASCADE_AUDIT_LOG=

# ============================================
# Temporal Decay Configuration
# ============================================

# Enable temporal memory decay (memories fade over time unless accessed)
# Default: true
DECAY_ENABLED=true

# Decay speed per day (higher = faster fade)
# Default: 0.01
DECAY_BASE_RATE=0.01

# Effective importance below this threshold hides memories from recall
# Default: 0.1
DECAY_THRESHOLD=0.1

# Importance at or above this value - memory never decays (immortal)
# Default: 0.9
DECAY_IMMORTAL_THRESHOLD=0.9

# Minutes between decay sweep runs
# Default: 60
DECAY_SWEEP_INTERVAL=60

# Maximum memories processed per layer per sweep
# Default: 1000
DECAY_SWEEP_BATCH_SIZE=1000
